{{#freestyle-guide
    title='Ember Freestyle'
    subtitle='Living Style Guide'
}}

  {{#freestyle-section name='Foo Things' as |section|}}
    {{#freestyle-collection title='Foo Collection' defaultKey='normal' as |collection|}}

      {{#freestyle-variant
          collection=collection
          key='normal'
          class='FreestyleCollection-variant'
      }}
        {{#freestyle-note 'foo-normal:notes'}}
#### Another Note About Normal

This comment is coming from a freestyle-note component.
        {{/freestyle-note}}
        {{#freestyle-annotation 'foo-normal'}}
          <h4>A Note About Normal</h4>
          <p>This comment is coming from a freestyle-annotation component.</p>
        {{/freestyle-annotation}}
        {{#freestyle-usage 'foo-normal'
            title='Normal'
            inline=(eq collection.activeKey 'all')
        }}
          {{x-foo status='normal'}}
        {{/freestyle-usage}}
      {{/freestyle-variant}}

      {{#freestyle-variant
          collection=collection
          key='special'
          class='FreestyleCollection-variant'
      }}
        {{#freestyle-usage 'foo-special'
            title='Special'
            inline=(eq collection.activeKey 'all')
        }}
          {{x-foo status='special'}}
        {{/freestyle-usage}}
      {{/freestyle-variant}}

      {{#freestyle-variant
          collection=collection
          key='hyper'
          class='FreestyleCollection-variant'
      }}
        {{#freestyle-usage 'foo-hyper'
            title='Hyper'
            inline=(eq collection.activeKey 'all')
        }}
          {{x-foo status='hyper'}}
        {{/freestyle-usage}}
      {{/freestyle-variant}}

      {{#freestyle-variant
          collection=collection
          key='classic'
          class='FreestyleCollection-variant'
      }}
        {{#freestyle-usage 'foo-classic'
            title='Classic'
            inline=(eq collection.activeKey 'all')
        }}
          {{x-foo status='classic'}}
        {{/freestyle-usage}}
      {{/freestyle-variant}}

      {{#freestyle-variant
          collection=collection
          key='elegant'
          class='FreestyleCollection-variant'
      }}
        {{#freestyle-usage 'foo-elegant'
            title='Elegant'
            inline=(eq collection.activeKey 'all')
        }}
          {{x-foo status='elegant'}}
        {{/freestyle-usage}}
      {{/freestyle-variant}}

      {{#freestyle-variant
          collection=collection
          key='tasteful'
          class='FreestyleCollection-variant'
      }}
        {{#freestyle-usage 'foo-tasteful'
            title='Tasteful'
            inline=(eq collection.activeKey 'all')
        }}
          {{x-foo status='tasteful'}}
        {{/freestyle-usage}}
      {{/freestyle-variant}}

    {{/freestyle-collection}}

  {{/freestyle-section}}

  {{#freestyle-section name='Visual Style' as |section|}}

    {{#freestyle-subsection name='Typography' section=section}}

      {{#freestyle-usage 'typography-times' title='Times New Roman'}}
        {{freestyle-typeface fontFamily='Times New Roman'}}
      {{/freestyle-usage}}

      {{#freestyle-usage 'typography-helvetica' title='Helvetica'}}
        {{freestyle-typeface fontFamily='Helvetica'}}
      {{/freestyle-usage}}

    {{/freestyle-subsection}}

    {{#freestyle-subsection name='Color' section=section}}

      {{#freestyle-usage 'fp' title='Freestyle Palette'}}
        {{freestyle-palette
            colorPalette=colorPalette
            title='Dummy App Color Palette'
            description='This component displays the color palette specified in freestyle/palette.json'
        }}
      {{/freestyle-usage}}

      {{#freestyle-usage 'fpi'
          title="Freestyle Palette Item"
          usageTitle="Template - application.hbs"
          jsTitle="Controller - application.js"
          scssTitle="SCSS - freestyle-palette-item.scss"
      }}
        {{freestyle-palette-item color=color}}
      {{/freestyle-usage}}

    {{/freestyle-subsection}}

  {{/freestyle-section}}

{{/freestyle-guide}}
