<div
  class="ProgressIcon {{if @isCancelled "is-cancelled"}} {{if @isComplete "is-complete"}}"
  ...attributes
  {{style
    width=(concat @size 'px')
    height=(concat @size 'px')
    backgroundSize=this.backgroundSizeStyle
  }}
>
  {{#if this.inProgress}}
    <div class="ProgressIcon-progressPie" style={{this.pieStyle}}>
      <svg xmlns="http://www.w3.org/2000/svg" width={{@size}} height={{@size}} viewBox="0 0 24 24"><g fill="none" stroke="var(--progress-icon-stroke-color, #e8e8e8)" stroke-width="5"><circle cx="12" cy="12" r="12" stroke="none"/><circle cx="12" cy="12" r="9.5" fill="none"/></g></svg>
    </div>
  {{/if}}
</div>
